<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.texopanda.texopandaapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AuthLoginActivity" />
        <activity android:name=".AuthSignUpActivity" />

        <activity
            android:name=".EventsActivity"
            android:label="Events"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".DevsActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"></activity>
    </application>

</manifest>