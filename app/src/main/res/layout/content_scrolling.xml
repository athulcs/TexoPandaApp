<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EventsActivity"
    tools:showIn="@layout/activity_events">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/events_linear_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="20dp">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view0"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/event0_iv"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:src="@drawable/cod"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/event0_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_below="@+id/event0_iv"
                    android:fontFamily="@font/bungee"
                    android:layout_marginStart="10dp"
                    android:text="Call of Duty" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/register_bt"
                    android:tag="0"
                    android:onClick="register"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_register"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/event1_iv"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:src="@drawable/blur"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/event1_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/event1_iv"
                    android:fontFamily="@font/bungee"
                    android:layout_marginStart="10dp"
                    android:text="Blur" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/register_bt"
                    android:tag="1"
                    android:onClick="register"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_register"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/event2_iv"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:src="@drawable/fortnite"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/event2_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/event2_iv"
                    android:fontFamily="@font/bungee"
                    android:layout_marginStart="10dp"
                    android:text="Fortnite" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/register_bt"
                    android:tag="2"
                    android:onClick="register"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_register"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/event3_iv"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:src="@drawable/csgo"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/event3_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/event3_iv"
                    android:fontFamily="@font/bungee"
                    android:layout_marginStart="10dp"
                    android:text="Counter Strike" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/register_bt"
                    android:tag="3"
                    android:onClick="register"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_register"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>